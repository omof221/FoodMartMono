@model FoodMartMono.Dtos.ProductDto.GetProductByIdDto
@{
    Layout = "~/Views/_layoutmain.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h2>Ürün Güncelleme </h2>
<div class="container">
    <br />        <br />
    <h3 class="alert alert-primary"> Ürün Güncelleme Sayfası </h3>
    <form method="post">

        <input type="hidden" asp-for="ProductId" />
        <label>Ürün Adı </label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
          <label>Ürün Stok </label>
        <input type="text" asp-for="StockCount" class="form-control" />
        <br />
        <label>Ürün Fiyatı </label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Ürün Kategori </label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <br />
        <label>Ürün Fotoğraf Url </label>
        <input type="text" asp-for="ImmageUrl" class="form-control" />
        <br />
        <button class="btn btn-info">Ürünü Güncelle</button>







    </form>








</div>